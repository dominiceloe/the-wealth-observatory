# Production Environment Variables Template
# Copy this file to .env.production and fill in with actual values
# DO NOT commit .env.production to version control

# Database connection string (AWS RDS PostgreSQL)
DATABASE_URL=postgresql://user:password@your-rds-endpoint.amazonaws.com:5432/wealthobservatory_prod

# Cron job authentication secret (generate with: openssl rand -base64 32)
CRON_SECRET=your_production_secret_here

# Node environment
NODE_ENV=production

# Public site URL
NEXT_PUBLIC_URL=https://your-domain.com
